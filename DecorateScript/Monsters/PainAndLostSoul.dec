Actor LostSoulVariants : RandomSpawner replaces LostSoul
{
	DropItem "PonyLostSoul"
	DropItem "UnicornLostSoul"
	DropItem "NirikLostSoul"
}	

Actor EquestriaLostSoul : LostSoul
{
	Health 50
	Species "PainSoul"
	RenderStyle Normal
	Height 30
	Radius 15
	
	+CASTSPRITESHADOW
	+FORCEXYBILLBOARD
	+FLOATBOB
	-COUNTKILL
	+NOBLOOD

}

Actor PonyLostSoul : EquestriaLostSoul
{
	States
	{
	
	Missile:
		SKUL C 10 Bright A_FaceTarget
		SKUL D 4 Bright A_SkullAttack
		SKUL CD 4 Bright
		Goto Missile+2
	
	Death:
		SKUL F 6 Bright
		SKUL G 6 Bright A_Scream
		SKUL H 6 Bright
		SKUL I 6 Bright A_NoBlocking
		SKUL J 3
		TNT1 A 0 A_SpawnItemEX("DeathLostSoul")
		SKUL J 3
		SKUL KKKKKKKKKK 1 A_FadeOut(0.1)
		Stop
	
	XDeath:
	Death.Berserk:
		SKUL H 6 Bright A_Scream
		SKUL I 3 Bright A_NoBlocking
		SKUL J 3
		TNT1 A 0 A_SpawnItemEX("DeathLostSoul")
		SKUL J 3
		SKUL KKKKKKKKKK 1 A_FadeOut(0.1)
		Stop
	}
}

