Actor EquestriaPain : PainElemental replaces PainElemental
{
	Species "PainSoul"
	FloatBobStrength 0.5
	PainChance 100
	
	+CASTSPRITESHADOW
	+FLOATBOB
	+FORCEXYBILLBOARD
	+DONTHARMSPECIES
	+AvoidMelee
	
	States
	{

	Missile:
		PAIN D 5 A_FaceTarget
		PAIN E 5 A_FaceTarget
		PAIN F 4 BRIGHT A_FaceTarget
		PAIN F 0 BRIGHT A_Jump(256, "Missile.Pony", "Missile.Unicorn", "Missile.Nirik")
		Goto See
	
		Missile.Pony:
			PAIN F 1 BRIGHT A_PainAttack("PonyLostSoul")
			Goto See
			
		Missile.Unicorn:
			PAIN F 1 BRIGHT A_PainAttack("UnicornLostSoul")
			Goto See
			
		Missile.Nirik:
			PAIN F 1 BRIGHT A_PainAttack("NirikLostSoul")
			Goto See

	Death:
		PAIN H 8 Bright
		PAIN I 8 Bright A_Scream
		PAIN J 8 Bright
		PAIN K 8 Bright
		{
			A_Explode(10, 200);
			A_QuakeEx(2, 2, 2, 4, 0, 500, "", 0,0,0,0, 1);
			A_CustomMissile(BloodExplosion);
		}
		PAIN L 8 Bright A_PainDie
		PAIN M 8 Bright
		Stop
  }
}


