actor GibGoreBase : DebrisGeneral
{
	Decal BloodSplat
	BounceSound "gore/bloodsplats"
	DeathSound "gore/bloodsplats"

	Height 4
	Radius 2
	
	Speed 10
	Gravity 0.75
	
	+ROLLSPRITE
	+ROLLCENTER
	
	+FORCEXYBILLBOARD
  
	+BOUNCEONWALLS
	+BOUNCEONFLOORS
	+BOUNCEONACTORS
	BounceType Doom
	BounceFactor 0.25
	
	+NOTELEPORT
	+THRUGHOST
	+FLOORCLIP
	
	-COUNTKILL

	+MISSILE
	
	States
	{
	Spawn:
		GORE A 0
	
	Spawn2:
		"####" "#" 0 A_SetRoll(random(0,359))
		Goto Roll
	
	Bounce:
		"####" "#" 0
		{
			A_SprayDecal("BloodSplat");
			A_SetRoll(random(0,359));
		}
	Roll:
		"####" "#" 2 A_SetRoll((roll + 10), SPF_INTERPOLATE)
		"####" "#" 2 A_SetRoll((roll + 10), SPF_INTERPOLATE)
		"####" "#" 2 A_SetRoll((roll + 10), SPF_INTERPOLATE)
		"####" "#" 0 A_SpawnItemEx("BloodTrail", random(-10, 10), random(-10, 10), random(-10, 10))
		"####" "#" 2 A_SetRoll((roll + 10), SPF_INTERPOLATE)
		"####" "#" 2 A_SetRoll((roll + 10), SPF_INTERPOLATE)
		"####" "#" 2 A_SetRoll((roll + 10), SPF_INTERPOLATE)
		Loop
	
	Death:
		"####" "#" 350
		"####" "#" 1 A_FadeOut(0.1)
		Wait
	}
}

