	Mass 5
	Speed 8
	
	+ForceXYBillBoard
	+DONTSPLASH
	+NOTELEPORT
	+NOBLOCKMAP
	-COUNTKILL
	+FLOORCLIP
	+MISSILE
	
	States
	{
	Spawn:
		BLUD C 0
		BLUD C 1
		{	
			//A_SpawnItemEx("SmallBloodParticle", 0, 0, 0, random(-1,1), random(-1,1), random(-1,1), random (0, 360), SXF_TRANSFERTRANSLATION | SXF_ABSOLUTEVELOCITY);
			//A_SpawnItemEx("SmallBloodParticle", 0, 0, 0, random(-1,1), random(-1,1), random(-1,1), random (0, 360), SXF_TRANSFERTRANSLATION | SXF_ABSOLUTEVELOCITY);
			//A_SpawnItemEx("SmallBloodParticle", 0, 0, 0, random(-1,1), random(-1,1), random(-1,1), random (0, 360), SXF_TRANSFERTRANSLATION | SXF_ABSOLUTEVELOCITY);
			//A_SpawnItemEx("SmallBloodParticle", 0, 0, 0, random(-1,1), random(-1,1), random(-1,1), random (0, 360), SXF_TRANSFERTRANSLATION | SXF_ABSOLUTEVELOCITY);
			//A_SpawnItemEx("SmallBloodParticle", 0, 0, 0, random(-1,1), random(-1,1), random(-1,1), random (0, 360), SXF_TRANSFERTRANSLATION | SXF_ABSOLUTEVELOCITY);
		}
	Blood:
		BLUD C 1 A_JumpIf(waterlevel > 1, "Dissolve")
		Loop
	
	Death:
		TNT1 A 0 A_JumpIf(waterlevel > 1, "Dissolve")
		TNT1 A 1 A_ChangeFlag("CORPSE", 1)
		Wait
	Crash:
		TNT1 A 0 A_ChangeFlag("NOBLOCKMAP",0)
		BLUD B 8 A_SpawnItemEX(SmallBloodPoolDrop, 0, 0, 0, 0, 0, 0, 0, SXF_TRANSFERTRANSLATION)
		BLUD A 8
		Stop
	
	Dissolve:
		BLUD C 1
		{
			A_FadeOut(0.1);
			A_SetScale((scalex + frandom(0.25, 0.5)), (scaley + frandom(0.25, 0.5)), false);
		}
		Wait
	}
