	+ForceXYBillBoard
	+DONTSPLASH
	+NOTELEPORT
	+NOBLOCKMAP
	-COUNTKILL
	+FLOORCLIP
	+MISSILE
	
	States
	{
	Spawn:
		BLUD C 0
		BLUD C 1
		{	
			//A_SpawnItemEx("SmallBloodParticle", 0, 0, 0, random(-1,1), random(-1,1), random(-1,1), random (0, 360), SXF_TRANSFERTRANSLATION | SXF_ABSOLUTEVELOCITY);
			//A_SpawnItemEx("SmallBloodParticle", 0, 0, 0, random(-1,1), random(-1,1), random(-1,1), random (0, 360), SXF_TRANSFERTRANSLATION | SXF_ABSOLUTEVELOCITY);
			//A_SpawnItemEx("SmallBloodParticle", 0, 0, 0, random(-1,1), random(-1,1), random(-1,1), random (0, 360), SXF_TRANSFERTRANSLATION | SXF_ABSOLUTEVELOCITY);
			//A_SpawnItemEx("SmallBloodParticle", 0, 0, 0, random(-1,1), random(-1,1), random(-1,1), random (0, 360), SXF_TRANSFERTRANSLATION | SXF_ABSOLUTEVELOCITY);
			//A_SpawnItemEx("SmallBloodParticle", 0, 0, 0, random(-1,1), random(-1,1), random(-1,1), random (0, 360), SXF_TRANSFERTRANSLATION | SXF_ABSOLUTEVELOCITY);
		}
	Blood:
		BLUD C 1 A_JumpIf(waterlevel > 1, "Dissolve")
