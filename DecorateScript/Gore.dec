actor GibGoreBase : DebrisGeneral
{
	Decal BloodSplat
	BounceSound "gore/bloodsplats"
	DeathSound "gore/bloodsplats"

	Height 4
	Radius 2
	
	Mass 4
	Speed 10
	Gravity 0.75
	
	+ROLLSPRITE
	+ROLLCENTER
	
	+FORCEXYBILLBOARD
  
	+BOUNCEONWALLS
	+BOUNCEONFLOORS
	+BOUNCEONACTORS
	BounceType Doom
	BounceFactor 0.25
	
	+NOTELEPORT
	+THRUGHOST
	+FLOORCLIP
	
	-COUNTKILL

	+MISSILE
	
	States
	{
	Spawn:
		GORE A 0
	
	Spawn2:
		"####" "#" 0 A_SetRoll(random(0,359))
		Goto Roll
	
	Roll:
		"####" "#" 4 A_SetRoll((roll + 20), SPF_INTERPOLATE)
		"####" "#" 4 A_SetRoll((roll + 20), SPF_INTERPOLATE)
		"####" "#" 0 A_SpawnItemEx("BloodTrail", random(-10, 10), random(-10, 10), random(-10, 10))
		Loop
	
	Death:
		"####" "#" 350
		"####" "#" 1 A_FadeOut(0.1)
		Wait
	}
}

