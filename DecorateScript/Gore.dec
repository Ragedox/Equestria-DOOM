Actor SmallBloodParticle : DEParticles
{
	+BounceOnFloors
	+SLIDESONWALLS
	+ThruActors
	-NoGravity
	BounceType Doom
	BounceFactor 0.25
	Gravity 0.10
	Speed 1
	Scale 0.5
	Height 2
	Radius 1
	
	RenderStyle Translucent Alpha 0.5
	States
	{
	Spawn:
		BLUD A 1
		Loop
	Death:
		BLUD A 1
		{
			A_SetScale((scalex - 0.01), (scaley - 0.01), false);
			A_FadeOut(frandom(0.1, 0.2));
		}
		Wait
	}
}
	

ACTOR SmallBloodPoolDrop : SmallBloodPool
{
	+MISSILE
	+ForceXYBillBoard
	States
	{
	Spawn:
		TNT1 A 1 
		TNT1 A 0 A_JumpIf(waterlevel > 1, "Dissolve")
		
		TNT1 A 0
		{
			
			bSPRITEFLIP = randompick(0, 1);
		}
		
		POB2 A random(8, 35)
		POB2 BCD random(2, 4)
		POB2 E 1 A_FadeOut(0.1)
		Wait
	
	Dissolve:
		POB2 A 1
		{
			A_FadeOut(0.15);
			A_SetScale((scalex + frandom(0.25, 0.5)), (scaley + frandom(0.25, 0.5)), true);
		}
		Wait
	}
}

