Class DemonicDog : DoomEquestriaMonster
{
	Default
	{
		//$Title Possessed Dog
		//$Category Monsters
		Tag "$FN_DOG";
		
		Health 75;
		
		Speed 10;
		
		PainChance 180;
		
		Height 28; Radius 12;
		
		Mass 100;
		
		+CASTSPRITESHADOW
		+JUMPDOWN
		-COUNTKILL
		
		ActiveSound "dog/active";
		AttackSound "dog/attack";
		DeathSound "dog/death";
		PainSound "dog/pain";
		SeeSound "dog/sight";
		
		Obituary "$OB_DOG";
	}
	States
	{
	Spawn:
		DOGS AB 10 A_Look();
		Loop;
	
	See:
		DOGS AABBCCDD 2 A_Chase();
		Loop;
	
	Melee:
		DOGS EF 8 A_FaceTarget();
		DOGS G 8 A_SargAttack();
		Goto See;
	
	Pain:
		DOGS H 2;
		DOGS H 2 A_Pain;
		Goto See;
	
	Death.Plasma:
		"####" "#" 0 A_SetTranslation("Toasted");
		"####" "#####" 0 A_SpawnProjectile("SplashSmoke", random(-20, 20), random (-20, 20), random (0, 360), CMF_AIMDIRECTION, random(0, -90));
	Death:
		"####" "#" 0 { bSPRITEFLIP = randompick(0, 1); }
		
		DOGS I 8;
		DOGS J 8 A_Scream();
		DOGS K 4;
		DOGS L 4 A_Fall();
		DOGS M 4;
		DOGS N -1;
		Stop;
	
	Raise:
		DOGS NMLKJI 5;
		
		"####" "#" 0 { bSPRITEFLIP = 0; }
		Goto See;
	}
}