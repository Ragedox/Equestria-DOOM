class EquestriaTorchFire : Actor
{
	Default
	{
		Radius 0; Height 0;
		+Randomize +NoInteraction +Bright +NoBlockmap +NoClip +RelativeToFloor +MoveWithSector
		RenderStyle "Add";
	}
	
	override void PostBeginPlay()
	{
		bSPRITEFLIP = randompick(0,1);
	}
	
	States
	{
	Spawn:
		TRCH ABCD random(3,4);
		#### # 0 A_SpawnItemEx("Smoke",0,0,15,0,0,0,0,0,200);
		Loop;
	}
}
