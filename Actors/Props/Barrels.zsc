Class AcidBarrel : EquestriaExploBarrel
{	Default { +LOOKALLAROUND }
	States
	{
	Pain:
		BAR1 A 0 A_SpawnProjectile("AcidDrop",height, frandom(radius * -1, radius), frandom(0, 360), CMF_AIMDIRECTION, frandom (-90, -45));
	Spawn:
		BAR2 AB 6 A_LookEx(LOF_NOSOUNDCHECK | LOF_NOSEESOUND,0,512,0,360);
		Loop;
		
	See:
		BAR2 AB 6 A_Jump(10, "Pain");
		Goto Spawn;
	
	Death.SuperShotgun:
		#### # 0 A_JumpIfCloser(150, 1);
		Goto Death;
		#### # 0
		{
			A_FaceTarget();
			ThrustThingZ(0,20,0,1);
			A_Recoil(7.5);
		}
		Goto XDeath;
		
	Death:
	Death.BarrelExp:
		BAR2 # 5;
		BAR2 C 5 A_Scream();
	XDeath:
	XDeath.BarrelExp:
		BAR2 DDDDD 1 Bright A_SpawnProjectile("AcidDrop",frandom(0, 32), frandom(radius * -1, radius), frandom(0, 360), CMF_AIMDIRECTION, frandom (-180, 90));
		BAR2 E 5 Bright
		{
			A_Explode(5, 64, XF_NOTMISSILE);
			A_SpawnItem("AcidPuddle",0,1);
			bFORCEXYBILLBOARD = 1;
			for (int i = 0; i < 25; i++)
			{
				A_SpawnProjectile("AcidDrop",frandom(0, 32), frandom(radius * -1, radius), frandom(0, 360), CMF_AIMDIRECTION, frandom (-180, 90));
			}
		}
		
		TNT1 AAAA 0 A_SpawnProjectile("SplashSmoke", random(0, 32), random (-40, 40), random (0, 359), CMF_AIMDIRECTION, random(0, -90));
		
		BAR2 F 1 Bright A_FadeOut(0.1);
		Wait;
	}
}

Class AcidDrop : EquestriaBlood
{
	Default
	{
		Decal "";
		Height 6; Radius 3;
		RenderStyle "Add";
		Gravity 1;
		Speed 8;
		Mass 35;
		Damage 10;
		DamageType "Nukage";

		+NOTELEPORT +NOBLOCKMAP
		+CORPSE
		+MISSILE
		+MOVEWITHSECTOR
		+ROLLSPRITE +ROLLCENTER
		+BRIGHT
		
		Translation "176:191=112:127";
	}
	States
	{
	Spawn:
		BLUD C 0 NoDelay A_SetRoll(Frandom(0, 360));
		BLUD C 1 A_SetRoll(roll + 8, SPF_INTERPOLATE);
		Wait;

	Death:
		BLUD CBA 70;
		Stop;
		
	Crash:
		TNT1 A 0 A_SpawnItemEX("AcidPuddle", 0,0,0,0,0,0,0, SXF_TRANSFERROLL);
		Stop;
	}
}

Class AcidPuddle : Actor
{
	Default
	{
		Radius 20; Height 5;
		Damage 5;
		DamageType "Nukage";
		Translation "176:191=112:127";
		+MOVEWITHSECTOR
		+CORPSE
		+NOTELEPORT +NOBLOCKMAP
		+FLATSPRITE
		+ROLLSPRITE +ROLLCENTER
		+BRIGHT
	}
	States
	{
	Spawn:
		TNT1 A 0 NoDelay A_Jump(256, 1,2,3,4);
		Wait;
		FLAT E 0;
		Goto InFloor;
		FLAT F 0;
		Goto InFloor;
		FLAT G 0;
		Goto InFloor;
		FLAT H 0;
		Goto InFloor;
		
	InFloor:
		FLAT ########## 35 Bright A_Explode(5, 20, XF_NOTMISSILE | XF_NOSPLASH);
		FLAT #################### 1 A_FadeOut(0.025);
		
	Dry:
		FLAT # 350;
		FLAT # 0 A_JumpIf(GetCVar("GibsStayForever")== 0, 1);
		Goto Dry;
		FLAT # 1 A_FadeOut(0.025);
		Wait;
	}
}

