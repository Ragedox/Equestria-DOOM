Class BerserkFist : EquestriaDoomWeapon
{
	Default
	{
		Weapon.BobSpeed 2;
		Weapon.BobRangeX 1.25; Weapon.BobRangeY 1.50;
		Weapon.BobStyle "InverseAlpha";
		
		Weapon.SelectionOrder 10;
		Weapon.Kickback 150;
		
		Obituary "$OB_MPFIST";
		Tag "$BERSERKFIST";
		
		+WEAPON.WIMPY_WEAPON;
		+WEAPON.MELEEWEAPON;
	}
	States
	{
	Ready:
		PUNG A 1 A_WeaponReady();
		Loop;
		
	Deselect:
		TNT1 A 0 {
			if(health <= 0)
				return ResolveState("DeathCheck");
			return ResolveState(null);
		}
		
		PUNG A 1 A_Lower;
		Wait;
		
	Select:
		PUNG A 0 A_OverlayFlags(0, PSPF_PLAYERTRANSLATED, true);
		
		PUNG A 1 A_Raise;
		Wait;
		
	Fire:
		PUNG B 4;
		PUNG C 4 A_CustomPunch(10 * Random(1, 10), TRUE, 0, "BerserkPuff", 50, 0, 0, "BasicArmorBonus", "skeleton/melee", "skeleton/swing");
		PUNG D 5;
		PUNG C 4;
		PUNG B 5 A_ReFire;
		Goto Ready;
		
	Overlay.Aside: Stop;
	Overlay.AirAside: Stop;
	}
}